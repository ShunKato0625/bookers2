<div class="container">
  <div class="row">
    <div class="col">
      <h2>Follow Users</h2>
        <% if @users.exists? %>
          <table class="table">
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
    </div>
    <div class="col">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= link_to "Show", user %></td>
            </tr>
          <% end %>
        </tbody>
          </table>
      <% else %>
        <th>ユーザーはいません</th>
      <% end %>
    </div>
  </div>
</div>