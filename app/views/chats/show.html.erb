<div class="container m-5">
    <div class="row">
      <div class="col">
        <h2 class="mb-4"><%= @user.name %>さんとのチャット</h2>
         <%= form_with model: @chat do |f| %>
         <div class="mb-4">
           <%= f.text_field :message %>
           <%= f.hidden_field :room_id %>
           <%= f.submit %>
         </div>
         <% end %>
         <table>
           <thead>
             <tr>
              <td>投稿者名</td>
              <td>投稿内容</td>
             </tr>
           </thead>
         <tbody>
           <% @chats.each do |chat| %>
             <tr>
                <td><%= chat.user.name %></td>
                <td><%= chat.message %></td>
             </tr>
           <% end %>
         </tbody>
        </table>
    </div>
</div>