<div class="container m-5">
    <div class="row">
      <div class="col">
        <div class="errors">
          <%= render "layouts/errors", obj: @chat %>
        </div>

        <h2 class="mb-4"><%= @user.name %>さんとのチャット</h2>
         <%= form_with model: @chat, data: {remote: true} do |f| %>
         <div class="mb-4">
           <%= f.text_field :message %>
           <%= f.hidden_field :room_id %>
           <%= f.submit %>
         </div>
         <% end %>

         <div class="message">
           <% @chats.each do |chat| %>
             <tr>
               <% if chat.user_id == current_user.id %>
                 <p style="text-align: right;">
                     <%= chat.user.name %> <br>
                     <%= chat.message %>
                 </p>
               <% else %>
                 <p style="text-align: left;">
                     <%= chat.user.name %> <br>
                     <%= chat.message %>
                 </p>
               <% end %>
             </tr>
           <% end %>
        </div>
      </div>
    </div>
</div>