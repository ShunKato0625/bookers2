<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 my-3'>
      <%= render 'users/userinfo', user: current_user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1 my-3'>
      <h2>Groups</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
                <% if group.image.attached? %>
              <td>
                <%= image_tag group.image,size:"40x40" %>
              </td>
                <% else %>
              <td>
                <%= image_tag'noimage',size:"40x40"%>
          </td>
            <% end %>
          </td>
              <td><%= link_to group.name, group_path(group) %></td>
              <td><%= group.introduction %></td>
              <td>
                 <i class="fas fa-user-group"></i><%= group.users.count %>
              </td>
              <td>
                <% if group.owner_id == current_user.id %>
                  <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>