 <div class="container">
   <div class="row my-4 justify-content-center">
     <%= render 'searches/search' %>
   </div>
    <!--サイドバー-->
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', user: @user %> <!--User infoの部分テンプレート-->
        <%= render 'books/newbook', book: @book %> <!--New bookの部分テンプレート-->
      </div>
      <!--自分の投稿一覧-->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th><!--ProfileImage--></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= image_tag @user.profile_image,size:"40x40" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td> <!--book_path(詳細表示)で(|book|)の投稿(.id)を持ってくる-->
                <td><%= book.body %></td>
                <td>コメント数：<%= book.book_comments.count %></td> <!--each文で使えるのは|book|-->
              </tr>
            <% end %>
          </tbody>
        </table>
        <table class="table table-bordered">
           <h3 class="mt-4">投稿数の前日比・前週比</h3>
          　<tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日比</th>
            </tr>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <% if @yesterday_book.count == 0 %>
              <td>--%</td>
              <% else %>
       　        <td><% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
       　        <%= (@the_day_before * 100).round %>%</td>
              <% end %>
            </tr>
        </table>
        <table class="table table-bordered">
            <tr>
              <th>今週の投稿数</th>
              <th>前週の投稿数</th>
              <th>前週比</th>
            </tr>
            <tr>
              <td><%= @this_week_book.count %></td>
              <td><%= @last_week_book.count %></td>
              <% if @last_week_book.count == 0 %>
              <td>--%</td>
              <% else %>
            　<td><% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f  %>
       　      <%= (@the_week_before * 100).round %>%</td>
              <% end %>
            </tr>
        </table>

        <table class="table table-bordered">
          <h3 class="mt-4">7日間分の投稿数</h3>
            <tr>
              <th>6日前</th>
              <th>5日前</th>
              <th>4日前</th>
              <th>3日前</th>
              <th>2日前</th>
              <th>1日前</th>
              <th>今日</th>
            </tr>
            <tr>
              <td><%= @books.created_6days.count %></td>
              <td><%= @books.created_5days.count %></td>
              <td><%= @books.created_4days.count %></td>
              <td><%= @books.created_3days.count %></td>
              <td><%= @books.created_2days.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td><%= @today_book.count %></td>
            </tr>
        </table>
          <canvas id="myChart"> </canvas>

    <script>
    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
            datasets: [{
                label: "投稿数",
                data: [<%= @books.created_6days.count %>, <%= @books.created_5days.count %>, <%= @books.created_4days.count %>, <%= @books.created_3days.count %>, <%= @books.created_2days.count %>, <%= @yesterday_book.count %>, <%= @today_book.count%>],
                backgroundColor: 'rgba(255, 80, 120, 1.0)',
                borderColor: 'rgba(255, 80, 120, 1.0)',
                lineTension: 0,
                fill: false
            }]
        },

       options: {
          title: {
            display: true,
            text: '7日間の投稿数の比較'
          },
          scales: {
            yAxes: [{
              ticks: {
                suggestedMax: 10,
                suggestedMin: 0,
                stepSize: 1,
                callback: function(value, index, values){
                  return  value
                }
              }
            }]
          },
        }
    });
</script>
    </div>
  </div>
</div>