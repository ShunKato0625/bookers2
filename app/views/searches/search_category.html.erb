<div class="container">
  <div class="row">
   <div class="col">
       <table class="table table-hover table-inverse">
         <h2>Books</h2>
         <tr>
           <th>image</th>
           <th>Title</th>
           <th>Opinion</th>
           <th>Category</th>
           <th colspan="3"></th>
         </tr>
         <div class="col">
         <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to(book.user) do %>
                  <%= image_tag book.user.profile_image,size:"40x40" %>
                <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
                <td><%= book.category %></td>
              </tr>
            <% end %>
        </tbody>
</table>
