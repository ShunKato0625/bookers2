<div class="container">
  <div class="row">
   <div class="col">
     <h2>Results index</h2>
       <table class="table table-hover table-inverse">
       <!--検索対象モデルがUserの時 -->
       <% if @range == "User" %>
         <tr>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
         </tr>
         <div class="col">
           <tbody>
             <% @users.each do |user| %>
           <tr>
             <td><%= image_tag user.profile_image,size:"40x40" %></td>
             <td><%= user.name %></td>
             <td><%= link_to "Show",user_path(user),method: :get %></td>
           </tr>
         </div>
      <% end %>
         </tbody>
      <% else %>
      <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
      <tr>
           <th>image</th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
         </tr>
         <div class="col">
         <tbody>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
